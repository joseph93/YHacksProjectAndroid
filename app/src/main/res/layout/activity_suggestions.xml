<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_suggestions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.josep.yhacks.Suggestions"
    android:background="@drawable/background"
    android:scaleType="center"
    >


    <Button
        android:text="Music"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/Music"
        android:drawableLeft="@drawable/ic_suggestion_music"
        android:drawablePadding="6dp"
        android:layout_below="@+id/Food"
        android:layout_alignLeft="@+id/Food"
        android:layout_alignStart="@+id/Food"
        android:textAlignment="center" />

    <Button
        android:text="Art"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/Art"
        android:drawableLeft="@drawable/ic_suggestion_art"
        android:drawablePadding="6dp"
        android:layout_below="@+id/Nightlife"
        android:layout_alignLeft="@+id/Nightlife"
        android:layout_alignStart="@+id/Nightlife"
        android:textAlignment="center" />

    <TextView
        android:text="What are you looking for Today?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/text_suggestion"
        android:fontFamily="casual"
        android:typeface="normal"
        android:textSize="18sp" />

    <Button
        android:text="Nightlife"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/Nightlife"
        android:layout_below="@+id/Music"
        android:layout_alignLeft="@+id/Music"
        android:layout_alignStart="@+id/Music"
        android:drawableLeft="@drawable/ic_suggestion_nightlife"
        android:drawablePadding="6dp"
        android:layout_marginTop="21dp"
        android:textAlignment="center" />

    <Button
        android:text="Food"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/Food"
        android:drawableLeft="@drawable/ic_suggestion_food"
        android:drawablePadding="6dp"
        android:gravity="left|center"
        android:layout_below="@+id/text_suggestion"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

</RelativeLayout>
